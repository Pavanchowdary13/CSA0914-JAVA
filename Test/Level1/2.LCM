public class lcm2 {
    public static void main(String[] args) {
        int num1 = 2;
        int num2 = 4;
        int max = Math.max(num1, num2);
        int lcm = max;
        while (true) {
            if (lcm % num1 == 0 && lcm % num2 == 0) {
                break;
            }
            lcm += max;
        }
        System.out.println("The LCM of " + num1 + " and " + num2 + " is: " + lcm);
    }   
}
