package project;
public class fibonacci {
    public static void main(String[] args) {
        int n = 4; 
        int sum = 0;
        int a = 0;
        int b = 1;

        while (b <= n) {
            if (b % 2 == 0) {
                sum += b;
            }
            int temp = a;
            a = b;
            b = temp + b;
        }

        System.out.println("The even sum of Fibonacci series till " + n + " is: " + sum);
    }
}
